<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         bootstrap="../code_output/autoload.php"
         verbose="true">
  <testsuite name="Door">
    <directory suffix="Test.php">../code_output/tests</directory>
  </testsuite>

  <logging>
    <log type="coverage-html" target="coverage" />
  </logging>

  <filter>
    <whitelist addUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">../code_output/src</directory>
      <exclude>
        <file>../code_output/src/autoload.php</file>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
